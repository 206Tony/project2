<h2>Home</h2>

<% if (!currentUser) {%>
  <a href="/auth/signup">Signup</a>
  <a href="/auth/login">Login</a>
<% } else { %>
  <p>Hello, <%= currentUser.name %></p>
  <a href="/auth/logout">Logout</a>
  <a href="/profile">Profile</a>
<% } %>

<div class="container">
  <h1 class="text-center">Your Heros</h1>
  <p class="text-center">
    <a href="/characters">Favorites</a>
  </p>
  <% characters.forEach(function(character,i) { %>
    <div class="well">
      <h2><%= character.name.toUpperCase() %></h2>
      <form method="POST" action="/marvel">
        <input hidden type="text" name="name" value="<%= character.name %>" >
        <button class="btn btn-primary" type="submit">Add to Favorite Hero</button>
      </form>
    </div>
  <% }); %>
</div>

